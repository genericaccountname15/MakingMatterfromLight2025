# The "default" physics list is QGSP_BERT
physics QGSP

beam gaussian particle=gamma z=0 meanMomentum=300 sigmaP=2 sigmaXp=0.0023 sigmaYp=0.0023 nEvents=100

box BeamVis width=100.0 height=100.0 length=0.1 material=Vacuum color=1,0,0
place BeamVis z=0

box kapton_tape width=1 length=10 height=0.075 color=0.8,0.8,0.8 material=KAPTON
place kapton_tape x=0 y=-1 z=150 rotation=x-40

virtualdetector Det height=150 width=150 length=0.001 color=0,1,0,0.3
place Det x=0 y=0 z=200
